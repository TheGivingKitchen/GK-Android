<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_yellow">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_resourcesCategoryFilterDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footerDivider_resourcesCategoryFilterDialog" />

    <View
        android:id="@+id/footerDivider_resourcesCategoryFilterDialog"
        style="@style/DividerViewSmall"
        android:layout_above="@id/footer_resourcesCategoryFilterDialog" />

    <LinearLayout
        android:id="@+id/footer_resourcesCategoryFilterDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toggleAllButton_resourcesCategoryFilterDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="@dimen/universal_horizontal_spacing"
            android:paddingTop="10dp"
            android:paddingEnd="@dimen/universal_horizontal_spacing"
            android:paddingBottom="10dp"
            android:text="@string/resources_tab_filter_toggle_button"
            android:textColor="@color/gk_blue"
            android:textSize="8pt" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/cancelButton_resourcesCategoryFilterDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="@dimen/universal_horizontal_spacing"
            android:paddingTop="10dp"
            android:paddingEnd="@dimen/universal_horizontal_spacing"
            android:paddingBottom="10dp"
            android:text="@string/resources_tab_filter_cancel_button"
            android:textColor="@color/gk_blue"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/saveButton_resourcesCategoryFilterDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:paddingStart="@dimen/universal_horizontal_spacing"
            android:paddingTop="10dp"
            android:paddingEnd="@dimen/universal_horizontal_spacing"
            android:paddingBottom="10dp"
            android:text="@string/resources_tab_filter_save_button"
            android:textColor="@color/gk_blue"
            android:textSize="8pt" />
    </LinearLayout>
</RelativeLayout>