<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/upButton_feedbackScreen"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/universal_vertical_spacing"
            android:text="@string/feedback_screen_back"
            android:textColor="@color/gk_blue"
            android:textSize="8pt" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_image_height"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_logo_orange"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/EgyptianText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/universal_horizontal_spacing"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/universal_horizontal_spacing"
            android:gravity="center_horizontal"
            android:text="@string/feedback_screen_header"
            android:textColor="@color/gk_orange"
            android:textSize="12pt" />

        <TextView
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/universal_horizontal_spacing"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/universal_horizontal_spacing"
            android:gravity="center_horizontal"
            android:text="@string/feedback_screen_description"
            android:textColor="@color/gk_blue"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/feedback_feedbackScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/universal_horizontal_spacing"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/universal_horizontal_spacing"
            android:background="@drawable/edit_text_border"
            android:inputType="textMultiLine"
            android:lines="5"
            android:padding="@dimen/universal_vertical_spacing" />

        <Button
            android:id="@+id/submit_feedbackScreen"
            style="@style/CTAButton"
            android:layout_marginStart="@dimen/universal_horizontal_spacing"
            android:layout_marginTop="@dimen/universal_horizontal_spacing"
            android:layout_marginEnd="@dimen/universal_horizontal_spacing"
            android:text="@string/feedback_screen_button" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>