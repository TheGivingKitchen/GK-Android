<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/universal_horizontal_spacing">

        <TextView
            android:id="@+id/name_resourceProviderBottomSheet"
            style="@style/LargeHeaderText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gk_blue" />

        <TextView
            android:id="@+id/category_resourceProviderBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/universal_vertical_spacing"
            android:gravity="center_horizontal"
            android:textColor="@color/gk_orange"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/description_resourceProviderBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/universal_vertical_spacing"
            android:gravity="center_horizontal"
            android:textColor="@color/gk_blue"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/website_resourceProviderBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/universal_vertical_spacing"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_grey"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/address_resourceProviderBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_grey"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/phone_resourceProviderBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_grey"
            android:textSize="8pt" />

        <View
            android:id="@+id/websiteDivider_resourceProviderBottomSheet"
            style="@style/DividerViewSmall"
            android:layout_marginTop="@dimen/universal_horizontal_spacing" />

        <TextView
            android:id="@+id/websiteButton_resourceProviderBottomSheet"
            style="@style/GiveTabButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/safetynet_bottomsheet_website_button" />

        <View
            android:id="@+id/directionsDivider_resourceProviderBottomSheet"
            style="@style/DividerViewSmall" />

        <TextView
            android:id="@+id/directionsButton_resourceProviderBottomSheet"
            style="@style/GiveTabButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/safetynet_bottomsheet_directions_button" />

        <View
            android:id="@+id/callTopDivider_resourceProviderBottomSheet"
            style="@style/DividerViewSmall" />

        <TextView
            android:id="@+id/callButton_resourceProviderBottomSheet"
            style="@style/GiveTabButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/safetynet_bottomsheet_call_button" />

        <View
            android:id="@+id/callBottomDivider_resourceProviderBottomSheet"
            style="@style/DividerViewSmall" />

        <TextView
            android:id="@+id/counties_resourceProviderBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/universal_horizontal_spacing"
            android:gravity="center_horizontal"
            android:textColor="@color/dark_grey"
            android:textSize="8pt" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>