<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/header_eventsTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_image_height"
        android:layout_marginTop="@dimen/header_image_top_margin"
        android:src="@drawable/ic_tab_events"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/headerDescription_eventsTab"
        style="@style/LargeHeaderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/universal_horizontal_spacing"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="@dimen/universal_horizontal_spacing"
        android:text="@string/events_tab_header_description"
        android:textColor="@color/gk_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_eventsTab" />

    <TextView
        android:id="@+id/learnMoreButton_eventsTab"
        style="@style/ParagraphText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="10dp"
        android:text="@string/safetynet_tab_learn_more"
        android:textColor="@color/gk_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerDescription_eventsTab" />

    <View
        android:id="@+id/headerDivider_eventsTab"
        style="@style/DividerViewLarge"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/learnMoreButton_eventsTab" />

</android.support.constraint.ConstraintLayout>