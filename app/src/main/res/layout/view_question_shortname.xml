<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_shortnameQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8pt"
        android:layout_marginBottom="15dp"
        style="@style/RegularText"/>

    <EditText
        android:id="@+id/firstName_shortnameQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=".AUTOFILL_HINT_NAME"
        android:background="@drawable/edit_text_border"
        android:hint="@string/shortname_question_firstname_hint"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/lastName_shortnameQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints=".AUTOFILL_HINT_NAME"
        android:background="@drawable/edit_text_border"
        android:hint="@string/shortname_question_lastname_hint"
        android:inputType="textCapWords"
        android:padding="10dp" />

</LinearLayout>